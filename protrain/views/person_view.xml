<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- protrain.person tree view -->
    <record id="protrain_person_view_tree" model="ir.ui.view">
        <field name="name">protrain.person.view.tree</field>
        <field name="model">protrain.person</field>
        <field name="arch" type="xml">
            <tree>
               <field name="name"/>
               <field name="alamat"/>
               <field name="notelp"/>
            </tree>
        </field>
    </record>

    <!-- protrain.person form view -->
    <record id="protrain_person_view_form" model="ir.ui.view">
        <field name="name">protrain.person.view.form</field>
        <field name="model">protrain.person</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group name="name" string="Nama">
                        <field name="name"/>
                    </group>
                    <group name="data" string="Data">
                        <field name="alamat"/>
                        <field name="notelp"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
